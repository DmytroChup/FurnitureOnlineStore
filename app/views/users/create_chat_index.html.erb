<div class="container mt-4">
  <div class="row justify-content-center mb-3">
      <p style="color: green;"><%= notice %></p>
      <h1>Choose a Producer to Chat With:</h1>
  </div>

  <%= form_tag create_chat_user_path, method: :post do %>
    <div class="form-group mb-4 d-flex align-items-center">
      <%= label_tag :producer_id, "Choose a Producer:", class: "form-label me-2" %>
      <%= select_tag :producer_id, options_for_select(@producers.map { |producer| [producer.producer_name, producer.id] }), class: "form-control w-auto" %>
    </div>

    <%= submit_tag "Create Chat", class: "btn btn-primary" %>
  <% end %>
</div>

<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :patronymic, style: "display: block" %>
    <%= form.text_field :patronymic %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <!-- Поле для текущего пароля -->
  <div>
    <%= form.label :current_password, "Current password" %><br />
    <%= form.password_field :current_password %>
  </div>

  <!-- Поле для нового пароля -->
  <div>
    <%= form.label :password, "New password" %><br />
    <%= form.password_field :password %>
  </div>

  <!-- Поле для подтверждения нового пароля -->
  <div>
    <%= form.label :password_confirmation, "Confirm new password" %><br />
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :cart_id, style: "display: block" %>
    <%= form.number_field :cart_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<div class="container mt-5">
  <p style="color: green"><%= notice %></p>

  <h1 class="mb-4">Users</h1>

  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Patronymic</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Username</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.patronymic %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.username %></td>
        <td>
          <%= link_to "Show user", user, class: "btn btn-info" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New user', new_user_path, class: 'btn btn-primary mt-3' %>
</div>

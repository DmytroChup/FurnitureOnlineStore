<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @found_users.size > 1 %>
      <div class="card">
        <div class="card-header">
          <h1 class="card-title">Founded Users</h1>
        </div>
        <div class="card-body">
            <ul class="list-group">
              <% @found_users.each do |user| %>
                <li class="list-group-item">
                  <div class="d-flex justify-content-between align-items-center">
                    <% unless current_user.id == user.id %>
                      <div>
                        <h5 class="mb-0"><%= user.username %></h5>
                        <a href="mailto:<%= user.email %>"><%= user.email %></a>
                        <p><strong>Selected Subcategories:</strong> <%= user.subcategories.pluck(:subcategory_name).join(', ') %></p>
                      </div>
                    <% end %>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div class="alert alert-warning" role="alert">
              <p class="mb-0">There are no users with similar interests</p>
            </div>
          <% end %>
        </div>
      </div>
      <%= link_to "Back to Profile", user_path(current_user), class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 50vh;">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body text-center">
          <p style="color: green;"><%= notice %></p>

          <%= render @product %>

          <div class="mt-3">
            <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary btn-sm mr-2" %> |
            <%= link_to "Back to products", products_path, class: "btn btn-secondary btn-sm mr-2" %>
            <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

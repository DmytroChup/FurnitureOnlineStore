<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1>Product</h1>
  <%= render @product %>

  <div class="d-flex align-items-center gap-2">
    <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary" %> |
    <%= link_to "Back to products", products_path, class: "btn btn-primary" %>
    <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  </div>
</div>

<div class="container mt-5">
  <div class="container">
    <div>
      <h1 class="text-center"><%= t("heading.product.edit") %></h1>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body mx-auto">
            <%= render "form", product: @product %>
          </div>
        </div>
      </div>
    </div>
    <br>
  </div>

  <div class="text-center">
    <%= link_to t("buttons.product.show_product"), @product, class: "btn btn-primary" %> |
    <%= link_to t("buttons.product.back_to_products"), products_path, class: "btn btn-secondary" %>
  </div>
</div>

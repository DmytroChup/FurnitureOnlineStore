<div id="<%= dom_id product %>">
  <p>
    <strong><%= t("heading.product.product") %> :</strong>
    <%= product.id %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.subcategory_id") %> :</strong>
    <%= product.subcategory_id %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.name") %> :</strong>
    <%= t("products.#{product.name}") %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.price") %> :</strong>
    <%= product.price %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.height") %> :</strong>
    <%= product.height %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.width") %> :</strong>
    <%= product.width %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.length") %> :</strong>
    <%= product.length %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.color") %> :</strong>
    <%= t("colors.#{product.color}") %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.material") %> :</strong>
    <%= t("materials.#{product.material}") %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.producer_id") %> :</strong>
    <%= product.producer_id %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.product.availability") %> :</strong>
    <%= product.availability %>
  </p>

</div>

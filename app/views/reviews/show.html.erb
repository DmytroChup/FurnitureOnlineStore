<div class="container pt-3 mb-5">
  <p style="color: green"><%= notice %></p>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card position-relative">
        <div class="card-body">
          <%= render @review %>
        </div>
        <div class="card-footer d-flex justify-content-center gap-2">
          <%= link_to "Edit this review", edit_review_path(@review), class: "btn btn-secondary" %>
          <%= link_to "Back to reviews", reviews_path, class: "btn btn-secondary" %>

          <%= button_to "Destroy this review", @review, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

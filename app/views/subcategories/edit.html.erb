<div class="container pt-3 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card position-relative">
        <div class="card-header">
          <h1><%= t("heading.subcategory.edit") %></h1>
        </div>
        <div class="card-body">
          <%= render "form", subcategory: @subcategory %>
        </div>

        <div class="card-footer d-flex justify-content-center mt-3">
            <%= link_to t("buttons.subcategory.show_subcategory"), @subcategory, class: "btn btn-primary me-2" %>
            <%= link_to t("buttons.subcategory.back_subcategories"), subcategories_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>

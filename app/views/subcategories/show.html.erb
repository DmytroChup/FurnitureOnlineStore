<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 50vh;">
    <div class="col-md-6 text-center">
      <p style="color: green;"><%= notice %></p>
       <div class="card">
        <div class="card-body text-center">
            <%= render @subcategory %>

            <div class="mt-3">
            <%= link_to "Edit this subcategory", edit_subcategory_path(@subcategory), class: "btn btn-primary mr-2" %> |
            <%= link_to "Back to subcategories", subcategories_path, class: "btn btn-secondary mr-2" %>
            <%= button_to "Destroy this subcategory", @subcategory, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

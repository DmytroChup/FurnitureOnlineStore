<div class="container pt-3 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p style="color: green;"><%= notice %></p>
      <div class="card position-relative">
        <div class="card-body">
            <%= render @subcategory %>
        </div>

        <div class="card-footer d-flex justify-content-center gap-2">
          <%= link_to t("buttons.subcategory.edit_subcategory"), edit_subcategory_path(@subcategory), class: "btn btn-primary mr-2" %>
          <%= link_to t("buttons.subcategory.back_subcategories"), subcategories_path, class: "btn btn-secondary mr-2" %>
          <%= button_to t("buttons.subcategory.destroy_subcategory"), @subcategory, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

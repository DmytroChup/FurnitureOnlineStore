<div class="container pt-3 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card position-relative">
        <div class="card-body">
          <p style="color: green;"><%= notice %></p>

          <%= render @category %>
        </div>
        <div class="card-footer d-flex justify-content-center gap-2">
            <%= link_to t("buttons.category.edit_category"), edit_category_path(@category), class: "btn btn-primary btn-sm mr-2" %>
            <%= link_to t("buttons.category.back_categories"), categories_path, class: "btn btn-secondary btn-sm mr-2" %>
            <%= button_to t("buttons.category.destroy_category"), @category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>

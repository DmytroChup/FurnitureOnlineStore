<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-3 g-3 justify-content-center">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="photo">
            <!-- Placeholder for photo -->
          </div>
          <div class="card-body">
            <p class="card-text text-center h5"><%= t("products.#{product.name}") %></p>
            <% if product.subcategory.present? && product.subcategory.category.present? %>
              <p class="card-category text-center h5">Category: <%= product.subcategory.category.category_name %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

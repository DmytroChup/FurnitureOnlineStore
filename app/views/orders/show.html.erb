<div class="container mt-5">
  <p style="color: green"><%= notice %></p>
  <h1 class="title is-1">Order â„–<%= @order.id %></h1>

  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Item Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
    </thead>
    <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.id %></td>
        <td><%= item.product.name %></td>
        <td>$<%= item.product.price %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.price %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="d-flex align-items-center gap-2">
    <%= link_to "Edit this order", edit_order_path(@order), class: "btn btn-primary" %> |
    <%#= link_to "Back to orders", orders_path, class: "btn btn-primary" %>
    <%= link_to "Back to orders", current_user ? orders_path(user_id: current_user.id) : orders_path, class: "btn btn-primary" %>

    <%= button_to "Destroy this order", @order, method: :delete, class: "btn btn-danger" %>
  </div>
</div>

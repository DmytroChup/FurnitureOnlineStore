<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1>Order item</h1>
  <%= render @order_item %>

  <div class="d-flex align-items-center gap-2">
    <%= link_to "Edit this order item", edit_order_item_path(@order_item), class: "btn btn-primary" %> |
    <%= link_to "Back to order items", order_items_path, class: "btn btn-primary" %>
    <%= button_to "Destroy this order item", @order_item, method: :delete, class: "btn btn-danger" %>
  </div>
</div>

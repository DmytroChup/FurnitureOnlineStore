<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card position-relative">
        <div class="card-header">
          <h3>Editing order item</h3>
        </div>
        <div class="card-body">
          <%= render "form", order_item: @order_item %>
        </div>
        <div class="card-footer d-flex justify-content-center">
          <%= link_to "Show this order item", @order_item, class: "btn btn-primary me-2" %>
          <%= link_to "Back to order items", order_items_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
